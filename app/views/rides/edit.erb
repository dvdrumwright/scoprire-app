<% if logged_in? %>
<p>Welcome, <%=current_user.username%>
<a href="/rides/new">Create new ride</a>
<a href="/logout">Log Out</a>
<a href="/rides">Show rides</a>
<% else %>
<a href="/signup">Sign Up</a>
<a href="/login">Login</a>
<% end %>

<h1>Edit Rides</h1>
<form action="/rides/<%=@ride.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">

<input type="text" id="title" name="title" value="<%= @ride.title %>">
<input type="text" id="discription" name="discription" value="<%= @ride.discription %>">
<input type="text" id="start_location" name="start location" value="<%= @ride.start_location %>">
<input type="text" id="ride_distance" name="ride distance" value="<%= @ride.ride_distance %>">
<input type="text" id="ride date" name="ride date">


<input type="submit" value="submit">
</form>
