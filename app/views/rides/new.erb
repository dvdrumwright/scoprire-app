<section class="new">
<h3> Create new group ride </h3>

<form action="/rides" method="POST">

<label for="title">Group ride name:</label>
<input type="text" name="Group_ride_name" id="title" placeholder="Name your group ride !" required> <br>

<label for="group_ride_content">Group ride content:</label>
<textarea type="text" name="Group_ride_content" id="Group_ride_content" placeholder="Please tell us about this ride" required></textarea><br></br>

<label for="location">Meet Up:</label>
<input type="text" name="Meet_Up" id="meet_up" placeholder="Departure location" required> <br>

<label for="ride_distance">Ride Distance:</label>
<input type="number" name="Ride_Distance" id="ride_distance" placeholder="How long is this ride? " required> <br>

<label for="ride_date">Ride Date:</label>
<input type="date" name="Ride_Distance" id="ride_date" placeholder="When is this ride happening?" required> <br>


    <button type="submit" class="btn btn-dark btn-lg">Submit</button>

</form>

<br>
 <a href="/logout">Log Out</a>
</section>
