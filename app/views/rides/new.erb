<h3> Create a new group ride </h3>

<form action="/rides" method="POST">
 <div class="form-group">
    <label for="group_ride_content">Group ride content</label><br>
    <textarea id="group_ride_content" name="group_ride_content" placehold="Enter group ride info"></textarea><br></br>
  </div>

  <div class"form-group">
    <label for="location">Location</label>
    <input type="text" name="location" placeholder="Location">
  </div>

  <div class"form-group">
    <label for="description">Description</label>
    <input type="text" name="Description" placeholder="Description">
  </div>


  <div class"form-group">
    <label for="ride_distance">Ride Distance</label>
    <input type="integer" name="ride_distance" placeholder="How long is the ride">
  </div>

  <div class"form-group">
    <label for="ride_date">Ride date</label>
    <input type="integer" name="ride_date" placeholder="Ride Date">
  </div>

  <div class="container">
       <button type="submit" class="btn btn-dark btn-lg">Submit</button>
    </div>



