<div class="user form">
  <h1>Edit your account</h1>
  <div>
    <form action="/cyclists/<%= @user.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
        <h1> Edit your user profile </h1>
        <p>Username:<input type="text" class="form-group" name="username" required value="<%=@user.username%>"></p>
        <p>Email:<input type="email" class="form-group" name="email" required value="<%=@user.email%>"></p>
        <p>Password:  <input type="password" class="form-group" required name="password" value="<%=@user.password%>"></p>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  <p><a href="/users/<%=@user.id%>">Back to your account</a></p>
        <p><form action="/users/<%=@user.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Account">
  </form></p>
</div>
