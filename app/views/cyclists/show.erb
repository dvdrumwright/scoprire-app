<h3>My cycling Histories</h3><br>
<h4><%= @user.username %></h4><br><hr>

    <% @user.rides.each do |ride| %>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm">
                <p>title</p>
                <h5><%= ride.title %></h5>
            </div>
            <div class="col-sm">
                <p>location</p>
                <h5><%= ride.location %></h5>
            </div>
            <div class="col-sm">
                <p>description</p>
                <h5><%= ride.description %></h5>
            </div>
            <div class="col-sm">
                <p>ride_distance</p>
                <h5><%= ride.ride_distance %></h5>
            </div>
            <div class="col-sm">
                <p>ride_date</p>
                <h5><%= ride.ride_date %></h5>
            </div>

        <div class="row">
            <button type="submit" >
                <a href="/rides/<%=ride.id%>/edit">Update</a>
            </button>
            <form action="/rides/<%=ride.id%>" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Delete">
            </form>
        </div>
    </div><hr><br>
    <% end %>
